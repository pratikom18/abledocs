@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string addbtn = ViewBag.isAdd;
    string editbtn = ViewBag.isEdit;

}

@model abledoc.Models.Countries;
@{
    ViewData["Title"] = Localizer["Countries"];
    ViewData["PageTitle"] = Localizer["Countries"];
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="row">
                            <label for="CountryFilter" class="col-form-label col-sm-2">@Localizer["Country Filter"]</label>
                            <div class="col-md-3">
                                <div class="form-group">

                                    @Html.DropDownList("CountryFilter", abledoc.Utility.ComboHelper.GetCountryList(), Localizer["Select"].Value, new { @id = "CountryFilter", @class = "form-control select2", @datastyle = "btn btn-link", @name = "CountryFilter", @placeholder = "Country" })

                                </div>
                            </div>

                            <label for="CountryFilter" class="col-form-label col-sm-2">@Localizer["Default SMTP"]</label>
                            <div class="col-md-3">
                                <div class="form-group">

                                    @Html.DropDownList("CountryFilter1", abledoc.Utility.ComboHelper.GetCountryList(ViewBag.Code), Localizer["Select"].Value, new { @id = "CountryFilter1", @class = "form-control select2", @datastyle = "btn btn-link", @name = "CountryFilter1", @placeholder = "Country" })

                                </div>
                            </div>

                            @if (@addbtn == "yes")
                            {
                                <div class="col-md-2 pull-right">
                                    <a href="javascript:;" class="btn btn-primary btn-sm float-sm-right btn-primary-1" id="addNewContent"><i class="fa fa-plus-circle"></i>@Localizer["ADD NEW"]</a>
                                </div>
                            }
                        </div>

                    </div>

                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="CountriesTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="5%">@Localizer["No."]</th>
                                        <th width="10%">@Localizer["Code"]</th>
                                        <th width="15%">@Localizer["Country"]</th>
                                        <th width="10%">@Localizer["Phone Prefix"]</th>
                                        <th width="10%">@Localizer["Currency"]</th>
                                        <th width="10%" class="disabled-sorting">@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<div id="popupModal">

</div>
<input type="hidden" name="myedit" id="myedit" value="@Localizer["Edit"]" />

@section scripts{
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/js/pages/Countries.js?v=@abledoc.Utility.CommonHelper.Version"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}