@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Countries;
<div class="modal fade" id="bootstrap-modal" role="dialog">
    <div class="modal-dialog" style="max-width: 65%;">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">


                    @if (ViewBag.PageMode == "Add")
                    {
                        @Localizer["Create"]
                    }
                    else if (ViewBag.PageMode == "Edit")
                    {
                        @Localizer["Update"]
                    }



                 @*   @Localizer["Create"]*@
                </h4>
            </div>
            <div id="demo-modal">
                <form method="post" id="Countriesform">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" asp-for="id" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="code" class="col-form-label col-sm-3 text-left">@Localizer["Code"] <span class="text-danger">*</span></label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="code" tabindex="1" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="state" class="col-form-label col-sm-3 text-left">@Localizer["Country"] <span class="text-danger">*</span></label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="country" tabindex="2" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phone_prefix" class="col-form-label col-sm-3 text-left">@Localizer["Phone Prefix"]</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="phone_prefix" tabindex="3" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phone_length" class="col-form-label col-sm-3 text-left">@Localizer["Phone Length"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="phone_length" tabindex="4" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="phone_format" class="col-form-label col-sm-3 text-left">@Localizer["Phone Format"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="phone_format" tabindex="5" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">@Localizer["Currency"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="currency" tabindex="6" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">@Localizer["Currency Code"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="currency_code" tabindex="7" />

                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="col-md-6">



                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">@Localizer["SMTP Host"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="smtphost" tabindex="8" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">@Localizer["SMTP Port"]</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="smtpport" tabindex="9" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">@Localizer["Email"] </label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                <input type="text" class="form-control" asp-for="emailaddress" tabindex="10" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="currency" class="col-form-label col-sm-3 text-left">
                                            @Localizer["Password"]</label>
                                            <div class="col-md-9">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" asp-for="password" tabindex="11" />

                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <div class="col-sm-2"><button type="button" class="btn btn-primary-1" id="saveContent">@Localizer["Save"]</button></div>
                        <div class="col-sm-2"><button type="button" class="btn btn-danger" data-dismiss="modal">@Localizer["Close"]</button></div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@{
    <script>
        $("#Countriesform").validate({
            rules: {
                country: "required",
                code: "required",

            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                if (element.hasClass('select2') && element.next('.select2-container').length) {
                    error.insertAfter(element.next('.select2-container'));
                } else {
                    error.insertAfter(element.closest('.form-control'));
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    </script>

}