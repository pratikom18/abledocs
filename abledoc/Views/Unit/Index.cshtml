@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string addbtn = ViewBag.isAdd;
    string editbtn = ViewBag.isEdit;

}

@model abledoc.Models.CommonMaster;
@{
    ViewData["Title"] = Localizer["Unit"];
    ViewData["PageTitle"] = Localizer["Unit"];
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">



                        @if (@addbtn == "yes")
                        {
                            <div class="pull-right">
                                <a href="javascript:;" class="btn btn-primary btn-sm float-sm-right btn-primary-1" id="addNewContent"><i class="fa fa-plus-circle"></i>@Localizer["ADD NEW"]</a>
                            </div>
                        }


                    </div>

                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="UnitTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="5%">@Localizer["No."]</th>
                                        <th width="15%">@Localizer["Name"]</th>
                                        <th width="10%">@Localizer["Display Order"]</th>
                                        <th width="10%" class="disabled-sorting">@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<div id="popupModal">

</div>
<input type="hidden" name="myedit" id="myedit" value="@Localizer["Edit"]" />

@section scripts{
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/js/pages/Unit.js?v=@abledoc.Utility.CommonHelper.Version"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}