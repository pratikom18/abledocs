@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Phase 3"];
    ViewData["PageTitle"] = Localizer["Phase 3"];
}

<input type="hidden" name="myedit" id="myedit" value="@Localizer["Edit"]" />
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        @*<div class="card-icon">
                                <i class="material-icons">assignment</i>
                            </div>
                            <h4 class="card-title">DataTables.net</h4>*@
                        <div class="row">
                            <div class="form-group col-sm-10">
                                <input type="text" id="txtSearch" class="form-control col-sm-12" value="@ViewBag.Search" />
                                <br />
                                @*<span class="text-danger search-error field-validation-error" style="display:none;" data-valmsg-for="Search" data-valmsg-replace="true"><span id="Search-error" class="">Please enter search text.</span></span>*@
                            </div>
                            <div class="form-group col-sm-2">
                                <button type="button" class="btn btn-primary btn-sm float-sm-right btnSearch btn-primary-1">
                                    <i class="fa fa-search"></i> @Localizer["Search"]
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <input type="hidden" id="currentDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <input type="hidden" id="forDue2Days" value="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")" />
                        <div class="material-datatables">
                            <table id="QcTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="20%">@Localizer["Engagement Num"]#</th>
                                        <th width="10%">@Localizer["File ID"]</th>
                                        <th width="30%">@Localizer["File Name"]</th>
                                        <th width="20%">@Localizer["DeadLine"]</th>
                                        <th width="20%">@Localizer["Assigned To"]</th>
                                        <th class="disabled-sorting">@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<div id="popupQuoteDetail">
</div>
@section scripts{


    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/js/pages/Qc.js?v=@abledoc.Utility.CommonHelper.Version"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}