@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ADscanFiles
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="modal fade" id="bootstrap-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">@Localizer["Add URLs to scan"]</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form method="post" class="form-horizontal" asp-controller="adscan" asp-action="insert" id="ADscanfilesForm">

                <div class="modal-body">

                    <input type="hidden" asp-for="crawl_id" />
                    <input type="hidden" asp-for="offsite" />
                    <input type="hidden" asp-for="flag" />
                    <div class="form-group">
                        <textarea type="text" asp-for="url" class="form-control"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="saveBtn">@Localizer["Save"]</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@Localizer["Close"]</button>
                </div>
            </form>

        </div>
    </div>
</div>