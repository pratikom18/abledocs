@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ADScan"];
    ViewData["PageTitle"] = Localizer["ADScan"];
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="ADScanTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width ="10" rowspan="2">@Localizer["ID"]</th>
                                        <th width="30" rowspan="2">@Localizer["Client"]</th>
                                        <th width="10" rowspan="2">@Localizer["Crawl Status"]</th>
                                        <th width="20" rowspan="2">@Localizer["Start Url"]</th>
                                        <th width="10"colspan="3" style="text-align:center" >@Localizer["Files"]</th>
                                    </tr>
                                    <tr>
                                        <th width="10">@Localizer["Found"]</th>
                                        <th width="10">@Localizer["Scanned"]</th>
                                        <th width="10">@Localizer["Error"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
@section scripts{


    <!-- BEGIN PAGE LEVEL PLUGINS -->
    @*  <script src="~/assets/js/pages/adscan.js"></script>*@
    <script src="~/assets/js/pages/adscan.js?v=@abledoc.Utility.CommonHelper.Version"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}