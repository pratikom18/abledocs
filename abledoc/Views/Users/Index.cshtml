@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string addbtn = ViewBag.isAdd;
    string editbtn = ViewBag.isEdit;

}


@model abledoc.Models.Users
@{
    ViewData["Title"] = Localizer["ADO Admin"];
    ViewData["PageTitle"] = Localizer["ADO Admin"];
}

<input type="hidden" id="hdnEdit" value="@Localizer["Edit"]" />

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    @if (@addbtn == "yes")
                    {
                        <div class="card-header card-header-primary card-header-icon">
                            <button type="button" class="btn btn-primary btn-sm float-sm-right newUser btn-primary-1" data-toggle="modal" data-target="#myModal">
                                <i class="fa fa-plus-circle"></i> @Localizer["ADD USER"]
                            </button>

                        </div>
                    }

                    <div class="card-body">


                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="UsersTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th width="10%">@Localizer["No"]</th>
                                        <th width="20%">@Localizer["Name"]</th>
                                        <th width="30%">@Localizer["Email"]</th>
                                        <th width="20%">@Localizer["UserName"]</th>
                                        <th width="20%" class="disabled-sorting">@Localizer["Action"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<div id="popupUserDetail">
</div>
<input type="hidden" name="myedit" id="myedit" value="@editbtn" />
@section scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/js/pages/Users.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}