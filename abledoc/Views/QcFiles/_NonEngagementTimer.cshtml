@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<input type="hidden" id="JobID_Timer" value="@ViewBag.JobID" />
<input type="hidden" id="FileID_Timer" value="@ViewBag.FileID" />
<div class="modal-dialog">
    <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">@Localizer["Non-Engagement Timer"]</h4>
            <button type="button" class="close model-close" data-dismiss="modal">&times;</button>
        </div>

        <div class="modal-body">
            <form method="post" class="form-horizontal" id="AltTextCreate">
                <div class="row col-md-12">
                    <div class="form-group row col-md-12">
                        @Html.DropDownList("queryTypeSelect", abledoc.Utility.ComboHelper.GetTimeTypeNew(), "Select", new { @id = "queryTypeSelect", @class = "col-md-12 form-control selectpicker", @datastyle = "btn btn-link", @name = "queryTypeSelect" })
                    </div>
                </div>
                <div class="row col-md-12">

                    <div class="form-group row col-md-12">
                        <textarea class="form-control" name="messageSecondTimer" rows="5" id="messageSecondTimer" placeholder="Notes ..."></textarea>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-6 col-form-label" id="stopWatch2">00:00:00</label>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success btn-primary-1" id="start2" onclick="Start2();">
                                @Localizer["Start"]
                            </button>
                            <button type="button" class="btn btn-danger" id="stop2" onclick="Stop2();">
                                @Localizer["Stop"]
                            </button>
                        </div>

                    </div>
                    <div class="form-group row col-md-12">
                        <button type="button" class="btn btn-success btn-primary-1" data-toggle="modal" onclick="DoneSecondTimer();">
                            <i class="fa fa-check-circle"></i> @Localizer["Done"]
                        </button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" id="cancel" onclick="CancelSecondTimer();">
                            <i class="fa fa-times-circle"></i> @Localizer["Cancel"]
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



