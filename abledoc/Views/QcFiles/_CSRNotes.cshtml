@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{

    ClientSpecificRequirements clientSpecificRequirements = new ClientSpecificRequirements();
    List<ClientSpecificRequirements> clientSpecificRequirementsList = new List<ClientSpecificRequirements>();
    clientSpecificRequirements.databasename = ViewBag.databasename;
    clientSpecificRequirementsList = clientSpecificRequirements.GetCSRByClientCode(ViewBag.Code);

}
<input type="hidden" id="hdnCode" value="@ViewBag.Code" />

<div class="col-md-6">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-collapse">
                        <div class="card-header" role="tab" id="headingOne">
                            <h5 class="mb-0">
                                <a data-toggle="collapse" href="#collapseCSRNotess" aria-expanded="true" aria-controls="collapseOne" class="collapsed accordion">
                                    @Localizer["CSR Note"]
                                    <i class="material-icons">keyboard_arrow_down</i>
                                </a>
                            </h5>
                        </div>
                        <div id="collapseCSRNotess" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion" style="">
                            <div class="card-body auto-scrool">
                                @if (clientSpecificRequirementsList != null)
                                {
                                    @foreach (ClientSpecificRequirements item in clientSpecificRequirementsList)
                                    {
                                        <div class="form-group row">
                                            @item.notes
                                            <hr class="hr-1" />
                                        </div>
                                    }
                                }


                                @*<div class="form-group row">
                                        <button type="button" class="btn btn-success btn-primary-1" data-toggle="modal" id="csrSave" onclick="CSRSave()">
                                            Save
                                        </button>

                                    </div>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>