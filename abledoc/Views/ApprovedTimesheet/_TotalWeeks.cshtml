@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<input type="hidden" id="hdnUserID" value="@ViewBag.UserID" />
<div class="card">
    <div class="card-header card-header-primary card-header-icon">
        <div class="row">
            <div class="form-group col-sm-12">
                <button type="button" id="btnReturn" class="btn btn-primary btn-sm float-sm-right btn-primary-1">
                    @Localizer["Return"]
                </button>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label for="empname" class="col-form-label">@Localizer["Employee Name"]:</label>
            </div>
            <div class="col-sm-10">
                <input type="text" name="empname" class="form-control" id="empname" value="@ViewBag.name" placeholder=@Localizer["Employee Name"] readonly>
            </div>
        </div>

    </div>

    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
        </div>
        <div class="material-datatables">
            <table id="TableTotalHours1" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                <thead>
                    <tr>
                        <th style="width:15%">@Localizer["Week in the year"]</th>
                        <th style="width:15%" class="text-right">@Localizer["Total hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Contract hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total OT hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Personal time hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Stat holiday hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Training hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Admin/Meetings hours"]</th>
                        <th style="width:10%" class="text-right">@Localizer["Total Other"]</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>

            </table>
        </div>
    </div>


    <!-- end content-->
</div>
<div class="DaysPerEmployee"></div>