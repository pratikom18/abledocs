@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model abledoc.Models.Clients;
<div class="modal fade" id="bootstrap-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">@Localizer["Add URL to ADScan"]</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form method="post" asp-controller="adscan" asp-action="create" id="ADscanForm">
                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" name="ClientID" value="@Model.ID" />
                    <input type="hidden" name="flag" value="@Model.flag" />
                    <div class="form-group">
                        <label for="starturl">@Localizer["Start URL"]: <span class="text-danger">*</span></label>
                        <input type="url" name="starturl" id="starturl" class="form-control" placeholder="https://www..." />
                    </div>



                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary-1" id="saveBtn">@Localizer["Save"]</button>
                    &nbsp;&nbsp;
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@Localizer["Close"]</button>
                </div>
            </form>

        </div>
    </div>
</div>
<script src="~/assets/js/pages/adscan.js?v=@abledoc.Utility.CommonHelper.Version"></script>