                            <div class="form-group">
                                <label class="bmd-label-floating">@Localizer["City"]</label>
                                <input type="text" class="form-control" asp-for="City" id="City" aria-describedby="City">
                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
