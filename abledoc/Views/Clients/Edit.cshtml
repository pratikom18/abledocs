                            {
                                @foreach (var contact in ViewBag.ContactList)
                                {
                                    <tr>
                                        <td>@(contact.FullName)</td>
                                        <td>@(contact.Email)</td>
                                        <td style="width:15%;">
                                            @*@if (ViewBag.SameCountryUser)
                                                {*@
                                            <a href="/contacts/edit/@contact.ID?flag=@Model.flag" class="btn btn-sm"><i class="fa fa-edit"></i> @Localizer["Edit"]</a>
                                            @*}
                                                else
