                            <thead>
                                <tr>
                                    <th>@Localizer["URL"]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.ADscanList != null)
                                {
                                    foreach (var scan in ViewBag.ADscanList)
                                    {
                                        <tr>
