@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ManageCompany
<div class="modal fade" id="bootstrap-modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">
                    @* @Localizer["Create"]*@
                    @if (ViewBag.PageMode == "Create")
                    {
                        @Localizer["Create"]
                    }
                    else if (ViewBag.PageMode == "Update")
                    {
                        @Localizer["Update"]
                    }
                </h4>
            </div>
            <div id="demo-modal">
                <form method="post" id="ManageCompanyform">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" asp-for="id" />

                            <div class="row">
                                <label asp-for="code" class="col-form-label col-sm-3">@Localizer["Code"] <span class="text-danger">*</span></label>
                                <div class="col-md-9">
                                    <div class="form-group">

                                        <input type="text" asp-for="code" class="form-control" />

                                    </div>
                                </div>
                            </div>




                            <div class="row">
                                <label asp-for="name" class="col-form-label col-sm-3">@Localizer["Company Name"] <span class="text-danger">*</span></label>
                                <div class="col-md-9">
                                    <div class="form-group">

                                        <input type="text" asp-for="name" class="form-control" />

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <div class="col-sm-2"><button type="button" class="btn btn-primary-1" id="saveContent">@Localizer["Save"]</button></div>
                        <div class="col-sm-2"><button type="button" class="btn btn-danger" data-dismiss="modal">@Localizer["Close"]</button></div>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@{
    <script>
        $("#ManageCompanyform").validate({
            rules: {
                code: "required",
                name:"required",
                
                
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                if (element.hasClass('select2') && element.next('.select2-container').length) {
                    error.insertAfter(element.next('.select2-container'));
                } else {
                    error.insertAfter(element.closest('.form-control'));
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    </script>
    
}