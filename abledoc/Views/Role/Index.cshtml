@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string addbtn = ViewBag.isAdd;
    string editbtn = ViewBag.isEdit;

}

@{
    ViewData["Title"] = Localizer["Role"];
    ViewData["PageTitle"] = Localizer["Role"];
}
<input type="hidden" id="hdnAssign" value="@Localizer["Assign"]" />
<input type="hidden" id="hdnPermission" value="@Localizer["Permission"]" />
<input type="hidden" name="myedit" id="myedit" value="@Localizer["Edit"]" />


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        @if (@addbtn == "yes")
                        {
                            <button type="button" class="btn btn-primary btn-sm float-sm-right newUserRole btn-primary-1" data-toggle="modal" data-target="#myModal">
                                <i class="fa fa-plus-circle"></i> @Localizer["ADD ROLE"]
                            </button>
                        }
                        @*else
                            {
                                <button type="button" class="btn btn-primary btn-sm float-sm-right newUserRole btn-primary-1" style="display:none" data-toggle="modal" data-target="#myModal">
                                    <i class="fa fa-plus-circle"></i> @Localizer["Add Role"]
                                </button>
                            }*@
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="material-datatables">
                            <table id="ClientsTable" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Localizer["No"]</th>
                                        <th>@Localizer["Name"]</th>
                                        <th>@Localizer["Menu Assign"]</th>
                                        <th>@Localizer["Setting Permission"]</th>
                                        <th>@Localizer["Display Order"]</th>
                                        <th>@Localizer["Active"]</th>
                                        <th class="disabled-sorting">@Localizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>
<div id="popupRoleDetail">
</div>
<input type="hidden" name="myedit" id="myedit" value="@editbtn" />

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/assets/js/pages/Role.js?v=@abledoc.Utility.CommonHelper.Version"></script>
    <!-- END PAGE LEVEL PLUGINS -->
}